    <h2>Writing</h2>

    <ul class="posts">
      {% for post in collections.post | reverse %}
      {% if post.data.published %}
      <li>
        <a href="{{post.url}}">
          {{post.data.title}}
          <div class="tags">
            {% for tag in post.data.categories %}
            {{tag}}
            {% endfor %}
          </div>
        </a>
      </li>
      {% endif %}
      {% endfor %}
    </ul>

    <h2>Reading</h2>

    <ul class="posts">
      {% for post in collections.book | reverse %}
      <li>
        {% if post.content %}
        <a href="{{post.url}}">
          {{post.data.title}}
          <div class="tags">
            {{post.data.author}}
          </div>
        </a>
        {% else %}
        <a class="disabled" role="link" aria-disabled="true">
          {{post.data.title}}
          <div class="tags">
            {{post.data.author}}
          </div>
        </a>
        {% endif %}
      </li>
      {% endfor %}
    </ul>

